<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="100">

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:gravity="center"
    android:layout_weight="10">

    <Button
      android:text="Optionen"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/optionsButton"
      android:width="100dp" />

    <Button
      android:text="Zutaten"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/ingredientsButton"
      android:width="100dp"
       />

    <Button
      android:text="Rezepte"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/recipesButton"
      android:width="100dp" 
      android:backgroundTint="#ff9e9e9e"/>

    <Button
      android:text="Menüs"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/menusButton"
      android:width="100dp" />

  </LinearLayout>

  <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center|bottom">

    <Button
      android:text="Rezept öffnen"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:width="200dp"
      android:id="@+id/searchButton" />

    <Button
      android:text="Neues Rezept erfassen"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:width="200dp"
      android:id="@+id/newButton" />

  </LinearLayout>

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:layout_weight="75">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/nameEditText"
      android:layout_width="match_parent"
      android:imeOptions="actionGo"
      android:inputType="text"
      android:layout_height="wrap_content"
      android:minHeight="30dp"
      android:hint="Rezeptbezeichnung"
      android:layout_margin="5dp" />

    </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|bottom"
    android:layout_weight="10">

    <Button
      android:text="Speichern"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/saveButton"
      android:width="150dp"
      android:backgroundTint="#ff1b5e20" />

    <Button
      android:text="Abbrechen"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/abortButton"
      android:width="150dp" />

    <Button
      android:text="Löschen"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/deleteButton"
      android:width="100dp"
      android:backgroundTint="#ffb71c1c" />

  </LinearLayout>

</LinearLayout>
