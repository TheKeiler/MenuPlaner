

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="100">

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:gravity="center"
    android:layout_weight="10">

    <Button
      android:text="Optionen"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/optionsButton"
      android:width="100dp" />

    <Button
      android:text="Zutaten"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/ingredientsButton"
      android:width="100dp"/>

    <Button
      android:text="Rezepte"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/recipesButton"
      android:width="100dp" />

    <Button
      android:text="Menüs"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/menusButton"
      android:width="100dp"
      android:backgroundTint="#ff9e9e9e"/>

  </LinearLayout>

  <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|bottom">

    <Button
      android:text="MenuPlan öffnen"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:width="200dp"
      android:id="@+id/menuPlanSearchButton" />

    <Button
      android:text="Neuer Menüplan"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:width="200dp"
      android:id="@+id/newMenuPlanButton" />

  </LinearLayout>

  <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|bottom">

    <Button
      android:text="Startdatum Wählen"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:width="200dp"
      android:id="@+id/menuPlanDateButton" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="Kein Datum gewählt"
      android:width="200dp"
      android:gravity="center_vertical"
      android:paddingLeft="5dp"
      android:id="@+id/menuPlanDateDisplay"/>

  </LinearLayout>

  <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="73"
        android:gravity="center">

  <LinearLayout android:orientation="horizontal"
