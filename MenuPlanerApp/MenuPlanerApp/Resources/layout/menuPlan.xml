

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="100">

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:gravity="center"
    android:layout_weight="10">

    <Button
      android:text="Optionen"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/optionsButton"
      android:width="100dp" />

    <Button
      android:text="Zutaten"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/ingredientsButton"
      android:width="100dp"/>

    <Button
      android:text="Rezepte"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/recipesButton"
      android:width="100dp" />

    <Button
      android:text="Menüs"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/menusButton"
      android:width="100dp"
      android:backgroundTint="#ff9e9e9e"/>

  </LinearLayout>

  <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center|bottom">

    <Button
      android:text="MenuPlan öffnen"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:width="200dp"
      android:id="@+id/menuPlanSearchButton" />

    <Button
      android:text="Neuer Menüplan"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:width="200dp"
      android:id="@+id/newMenuPlanButton" />

  </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="75"
        android:rowCount="8"
        android:columnCount="4"
        android:layout_margin="5"
        >

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Portionen:"
        android:width="80dp"
        android:layout_margin="5dp" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mittagessen:"
        android:width="100dp"
        android:layout_margin="5dp" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Portionen:"
        android:layout_margin="5dp"
        android:width="80dp" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abendessen:"
        android:layout_margin="5dp"
        android:width="100dp"/>

      <android.support.design.widget.TextInputEditText
        android:id="@+id/mondayLunchEditText"
        android:layout_width="wrap_content"
        android:imeOptions="actionGo"
        android:inputType="numberSigned"
        android:layout_height="wrap_content"
        android:hint="Anzahl"
        android:layout_margin="5dp"
        android:layout_marginVertical="10dp"/>

      <Button
        android:text="Montag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mondayLunchButton"
      />

      <android.support.design.widget.TextInputEditText
        android:id="@+id/mondayDinnerEditText"
        android:layout_width="wrap_content"
        android:imeOptions="actionGo"
        android:inputType="numberSigned"
        android:layout_height="wrap_content"
        android:hint="Anzahl"
        android:layout_margin="5dp" />

      <Button
        android:text="Montag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mondayDinnerButton"
      />

    </GridLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|bottom"
    android:layout_weight="10">

    <Button
      android:text="Speichern"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/menuPlanSaveButton"
      android:width="150dp"
      android:backgroundTint="#ffa5d6a7" />

    <Button
      android:text="Abbrechen"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/menuPlanAbortButton"
      android:width="150dp" />

    <Button
      android:text="Löschen"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/menuPlanDeleteButton"
      android:width="100dp"
      android:backgroundTint="#ffef9a9a" />

  </LinearLayout>

</LinearLayout>